<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuizTime" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>

        <item name="textAppearanceHeadline1">@style/QuizTitleStyle</item>
        <item name="materialButtonStyle">@style/QuizAnswerButtonStyle</item>
    </style>

    <style name="Theme.QuizTime" parent="Base.Theme.QuizTime" />


    <style name="QuizTitleStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="QuizAnswerButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="elevation">4dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">12dp</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>


</resources>